# PromptToProduct Configuration
# Copy this file to .env and configure your settings

# ======================
# GitHub Configuration
# ======================
GITHUB_PERSONAL_ACCESS_TOKEN=your_github_token_here
GITHUB_REPO_OWNER=vrushalisarfare
GITHUB_REPO_NAME=PromptToProduct
GITHUB_BASE_URL=https://api.github.com

# ======================
# System Configuration
# ======================
# Enable automatic GitHub synchronization of spec files
AUTO_SYNC_GITHUB=true

# Enable debug mode for verbose logging
DEBUG_MODE=false

# Development mode (enables additional features)
DEVELOPMENT_MODE=true

# Session timeout in seconds
SESSION_TIMEOUT=3600

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# ======================
# Banking Configuration
# ======================
DEFAULT_BANKING_CONTEXT=true
DEFAULT_COMPLIANCE_AREAS=KYC,AML,PCI-DSS,SOX,Basel III
BANKING_PRODUCTS=loans,credit_cards,payments,investments,accounts,digital_banking

# ======================
# Agent Configuration
# ======================
# Memory size for orchestrator (number of conversation turns to remember)
ORCHESTRATOR_MEMORY_SIZE=10

# Automatically validate specs after creation
SPEC_AGENT_AUTO_VALIDATE=true

# Default programming language for code generation
CODE_AGENT_DEFAULT_LANGUAGE=python

# Minimum validation score to pass (0.0 to 1.0)
VALIDATION_AGENT_MIN_SCORE=0.7

# ======================
# Path Configuration
# ======================
SPECS_ROOT_PATH=specs
MYBANK_ROOT_PATH=src/MyBank
PROMPTS_LIBRARY_PATH=prompts

# ======================
# Default Values
# ======================
DEFAULT_OWNER=TBD
DEFAULT_ASSIGNEE=TBD
DEFAULT_PRIORITY=Medium
DEFAULT_STATUS=In Progress
SYSTEM_USER=PromptToProduct-Agent